<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @*@Styles.Render("~/Content/css")*@
    @Styles.Render("~/Content/font")
    @Styles.Render("~/Metronic/css")
    @Styles.Render("~/Content/Metronic/admin/login.css")
    @*@Scripts.Render("~/bundles/modernizr")*@
   @RenderSection("styles", required: false)
</head>
<body class="login">
    <div class="container body-content ">
        <div class="logo">
            <a href="/">
                <img src="~/Content/Images/head/logo.png" />
            </a>
        </div>
        @RenderBody()
        <div class="copyright">
            @DateTime.Now.Year &copy; HxBlogs by JIE.Tong
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/unobtrusive")
    @Scripts.Render("~/Scripts/App/jquery-extendsion.js")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>