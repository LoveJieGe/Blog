<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1, shrink-to-fit=no">
    <title>@ViewBag.Title - 海·星の博客</title>
    @RenderSection("beginstyles", required: false)
    @Styles.Render("~/content/site")
    @Styles.Render("~/content/remind")
    @Styles.Render("~/content/darkblack")
    <link href="~/Content/app/hx-navbar.css?v=0.2" rel="stylesheet" />
    @Scripts.Render("~/bundles/site")
    @RenderSection("endstyles", required: false)
</head>
<body>
    <div class="d-flex h-100">
        @{
            Html.RenderPartial("_aside",new ViewDataDictionary {
                {"Active",ViewBag.Active }
            });
        }
        <div class="flex-fill">
            @RenderBody()  
        </div>
    </div>
    @Scripts.Render("~/bundles/core")
    @Scripts.Render("~/bundles/remind")
    @RenderSection("scripts", required: false)
</body>
</html>