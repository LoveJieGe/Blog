@{
    int i = 0;
}
<div class="card-header hx-card-header">
    最新文章
</div>
<div class="card-body hx-card-body">
    <div class="d-flex flex-column justify-content-start">
        @if (ViewBag.BlogList != null)
        {
            foreach (HxBlogs.Model.Blog blog in ViewBag.BlogList)
            {
                i++;
                <a class="hx-content-nowrap @(i!=1?"mt-1":"")" target="_blank" href="@(WebHelper.GetFullUrl("/article/"+blog.UserName+"/"+blog.HexId))" >@blog.Title</a>
            }
        }
    </div>
</div>
