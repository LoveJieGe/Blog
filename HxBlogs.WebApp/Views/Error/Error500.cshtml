@model HxBlogs.WebApp.Models.ExceptionMessage
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>系统错误</title>
    @Styles.Render("~/content/bootstrap")
</head>
<body>
    <div class="container">
        <div class="card small" style="width:90%;border:none;">
            <img class="card-img-top" src="~/Content/Images/500.png" alt="Card image" style="width:100%">
            <div class="card-body">
                <div class="card-text">
                    <table class="table table-bordered table-sm">
                        <tr>
                            <td>请求路径</td>
                            <td>@Model.Path</td>
                        </tr>
                        <tr>
                            <td>异常发生时间</td>
                            <td>@Model.Time</td>
                        </tr>
                        <tr>
                            <td>异常内容</td>
                            <td>@Model.Message</td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>
        <br>
    </div>
</body>
</html>
